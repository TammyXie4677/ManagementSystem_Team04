<Window x:Class="CustomerLoyaltyManagementSystem.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerLoyaltyManagementSystem"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Registration" Height="350" Width="500">
    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Email:" FontSize="20"/>
            <TextBox Name="EmailTextBox" Margin="0,0,0,10" FontSize=" 20"/>
            <TextBlock Text="Password:" FontSize="20"/>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10" FontSize="20"/>
            <TextBlock Text="Confirm Password:" FontSize="20"/>
            <PasswordBox Name="ConfirmPasswordBox" Margin="0,0,0,20" FontSize="20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Register" Width="100" Margin="0,0,10,0" FontSize="20" Click="RegisterButton_Click"/>
                <Button Content="Exit" Width="100" FontSize="20" Click="ExitButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
