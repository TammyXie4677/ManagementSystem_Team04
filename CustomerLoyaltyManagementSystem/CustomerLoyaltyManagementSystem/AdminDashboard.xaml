<Window x:Class="CustomerLoyaltyManagementSystem.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerLoyaltyManagementSystem"
        mc:Ignorable="d"
        Title="AdminDashboard" Height="550" Width="800">

    <!-- Define the button style here -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#0C99B5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <!-- Style for DataGrid column headers -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#0C99B5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style for DataGrid row on mouse hover -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <!-- Remove row border -->
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1294AE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>



    <Grid>
        <!-- TabControl for switching between different sections -->
        <TabControl>
            <!-- Tab 1: Create Promotion -->
            <TabItem Header="Create Promotion">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- Added row for DataGrid -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Add background to the "Create a New Program" title -->
                    <Grid Background="#0C99B5" Margin="5">
                        <TextBlock Text="Create a New Program" FontWeight="Bold" FontSize="16" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10"/>
                    </Grid>
                    <Grid Grid.Row="1" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Promotion Name -->
                        <TextBlock Text="Program Name:" VerticalAlignment="Center" Margin="10" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Name="ProgramNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                        <!-- Description -->
                        <TextBlock Text="Description:" VerticalAlignment="Center" Margin="10" Grid.Row="1" Grid.Column="0"/>
                        <TextBox Name="DescriptionTextBox" Grid.Row="1" Grid.Column="1" Margin="5" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="100"/>

                        <!-- Start Date -->
                        <TextBlock Text="Start Date:" VerticalAlignment="Center" Margin="10" Grid.Row="2" Grid.Column="0"/>
                        <DatePicker Name="StartDatePicker" Grid.Row="2" Grid.Column="1" Margin="5"/>

                        <!-- End Date -->
                        <TextBlock Text="End Date:" VerticalAlignment="Center" Margin="10" Grid.Row="3" Grid.Column="0"/>
                        <DatePicker Name="EndDatePicker" Grid.Row="3" Grid.Column="1" Margin="5"/>

                        <!-- Program Tier -->
                        <TextBlock Text="Program Tier:" VerticalAlignment="Center" Margin="10" Grid.Row="4" Grid.Column="0"/>
                        <ComboBox Name="TierComboBox" Grid.Row="4" Grid.Column="1" Margin="5" SelectedIndex="0">
                            <ComboBoxItem Content="Select a tier" IsEnabled="False" />
                            <ComboBoxItem Content="Silver"/>
                            <ComboBoxItem Content="Gold"/>
                            <ComboBoxItem Content="Platinum"/>
                        </ComboBox>

                        <!-- Button -->
                        <Button Content="Save Program" Name="SavePromotionButton" Grid.Row="5" Grid.Column="1" Margin="5,28,10,0"  HorizontalAlignment="Left"
                                Click="SavePromotionButton_Click"/>
                        <Button Content="Clear" Name="ClearButton" Grid.Row="5" Grid.Column="1" Margin="200,28,5,0"  HorizontalAlignment="Left"
                                Click="ClearButton_Click"/>
                        <Button Content="Exit" Name="ExitButton" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Margin="400,28,0,0" 
                                Click="ExitButton_Click"/>
                    </Grid>

                </Grid>
            </TabItem>

            <!-- Tab 2: Manage Customer -->
            <TabItem Header="Manage Customer">
                <Grid Margin="10">
                    <TextBlock Text="Manage Customer Data" FontWeight="Bold" FontSize="16" Margin="5"/>
                    <!-- Customer management UI goes here -->
                </Grid>
            </TabItem>

            <!-- Tab 3: View Reports -->
            <TabItem Header="View Reports">
                <Grid Margin="10">
                    <TextBlock Text="View Reports" FontWeight="Bold" FontSize="16" Margin="5"/>
                    <!-- Report generation UI goes here -->
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

